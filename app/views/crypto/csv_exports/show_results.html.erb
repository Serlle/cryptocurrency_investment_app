<h1>Investment Csv Export#show</h1>

<% if @calculated_value.present? %>
  <h2>Informacion de Inversion:</h2>
  <table>
    <thead>
      <tr>
        <th>Moneda</th>
        <th>Inter√©s Mensual</th>
        <th>Balance Inicial</th>
        <th>Balance Proyectado Final(USD)</th>
      </tr>
    </thead>
    <tbody>
      <% @calculated_value.each do |result| %>
        <tr>
          <td><%= result[:currency] %></td>
          <td><%= result[:monthly_rate] %>%</td>
          <td><%= result[:initial_balance] %></td>
          <td>$<%= result[:final_projected_balance] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No hay resultados disponibles.</p>
<% end %>
